// Prisma schema file
// Docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output = "../generated/prisma" // optionnel, tu peux le laisser par d√©faut
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id             Int      @id @default(autoincrement())
  title          String
  description    String?       
  authorId       Int
  categoryId     Int
  publishedDate DateTime    
  available      Boolean

  // Relations
  author   Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  biography String
  birthDate DateTime?

  // Relation inverse
  books Book[]
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String

  // Relation inverse
  books Book[]
}


model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     Role
}

enum Role {
  USER
  ADMIN
}

